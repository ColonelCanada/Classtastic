<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
			<h2>Sign up</h2>


			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="panel-body">
			   <div><%= f.label :name %><br />
			   <%= f.text_field :name, class: "form-control", :autofocus => true %></div>
			 </div>

			 <div class="panel-body">
			  <div><%= f.label :email %><br />
			  <%= f.email_field :email, class: "form-control", :autofocus => true %></div>
			</div>
		 
			 <div class="panel-body">
			  <div><%= f.label :password %><br />
			  <%= f.password_field :password, class: "form-control" %></div>
			 </div>
		 
			 <div class="panel-body">
			  <div><%= f.label :password_confirmation %><br />
			  <%= f.password_field :password_confirmation, class: "form-control" %></div>
				</div>
			
				</div>
		  	<div><%= f.submit "Sign up", class: "btn btn-primary" %></div>
			<% end %>
			</div>
		</div>
  	<div class="panel-footer">
		<%= render "devise/shared/links" %>
	</div>
</div>